<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_yellow"
    tools:context=".MainActivity">

    <!--btns for shapes-->
    <ImageView
        android:id="@+id/colorDisplay"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172"
        app:srcCompat="@drawable/color_white" />

    <ImageView
        android:id="@+id/shapeDisplay"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/colorDisplay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/colorDisplay"
        app:layout_constraintTop_toBottomOf="@+id/colorDisplay"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/shape_square" />

    <ImageButton
        android:id="@+id/colorsNextBtn"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/colorDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorDisplay"
        app:layout_constraintTop_toTopOf="@+id/colorDisplay"
        app:srcCompat="@drawable/btn_next" />

    <ImageButton
        android:id="@+id/colorsPrevBtn"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/colorDisplay"
        app:layout_constraintEnd_toStartOf="@+id/colorDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/colorDisplay"
        app:srcCompat="@drawable/btn_prev" />

    <!--btns for colors-->
    <ImageButton
        android:id="@+id/shapesNextBtn"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/shapeDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shapeDisplay"
        app:layout_constraintTop_toTopOf="@+id/shapeDisplay"
        app:srcCompat="@drawable/btn_next" />

    <ImageButton
        android:id="@+id/shapesPrevBtn"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/shapeDisplay"
        app:layout_constraintEnd_toStartOf="@+id/shapeDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shapeDisplay"
        app:srcCompat="@drawable/btn_prev" />

    <!--instructions btn-->
    <ImageButton
        android:id="@+id/instBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/btn_inst" />

    <!--show result btn-->
    <ImageButton
        android:id="@+id/makeBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shapeDisplay"
        app:layout_constraintStart_toStartOf="@+id/shapeDisplay"
        app:layout_constraintTop_toBottomOf="@+id/shapeDisplay"
        app:srcCompat="@drawable/btn_make" />

    <!--restart btn-->
    <ImageButton
        android:id="@+id/againBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shapeDisplay"
        app:layout_constraintStart_toStartOf="@+id/shapeDisplay"
        app:layout_constraintTop_toBottomOf="@+id/shapeDisplay"
        app:srcCompat="@drawable/btn_again" />

    <!--loading gif card-->
    <ImageView
        android:id="@+id/loadingGif"
        android:layout_width="350dp"
        android:layout_height="567dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347"
        app:srcCompat="@drawable/loading_white" />

    <!--result card-->
    <ImageView
        android:id="@+id/resultCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347"
        app:srcCompat="@drawable/blank_white" />
</androidx.constraintlayout.widget.ConstraintLayout>